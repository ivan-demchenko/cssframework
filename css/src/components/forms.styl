@import "../defaults"
@import "../functions"

label
  display inline-block
  padding form_elem_padding 0

optgroup
  font-style normal

option:hover
  background-color lighten(color_gray, color_lighter)

fieldset
  padding 0
  border-bottom none
  border-left none
  border-right none
  border-top dotted 1px color_gray

legend
  margin-left 0px
  padding-right 5px
  font-size fontsize + 3px

keygen
  width 220px
  border input_border
  background color_input_normal
  padding 4px

input.loading
  background-image url("../images/loader.gif")
  background-position 100% 50%
  background-repeat no-repeat

input[type='color'],
input[type='date'],
input[type='datetime'],
input[type='datetime-local'],
input[type='email'],
input[type='month'],
input[type='number'],
input[type='range'],
input[type='search'],
input[type='tel'],
input[type='time'],
input[type='url'],
input[type='week'],
input[type='text'],
input[type='password'],
textarea,
select
  border input_border
  background-color color_input_normal
  padding form_elem_padding
  width 220px
  vertical-align middle
  line-height lineheight
  multiprop(box-sizing, border-box)

  &:focus
    background-color color_input_focused
    border-color color_input_border_focused

input[type='time'],
input[type='number'],
input[type='date'],
input[type='datetime'],
input[type='datetime-local']
  text-align right

textarea
  height 70px

form
  input[type='submit'],
  input[type='reset'],
  input[type='radio'],
  input[type='checkbox'],
  input[type='button']
    width auto

  input.error
    color color_red
    border solid 1px color_red
    background color_input_error

  dl
    margin 1em 0

    dt
      clear left
      float left
      padding 0
      width 140px

    dd
      margin 0 0 0.5em 150px

  ul
    width 100%
    float left
    padding 0

    li
      display block
      float left
      min-height 56px
      position relative

      input[type='color'],
      input[type='date'],
      input[type='datetime'],
      input[type='datetime-local'],
      input[type='email'],
      input[type='month'],
      input[type='number'],
      input[type='range'],
      input[type='search'],
      input[type='tel'],
      input[type='time'],
      input[type='url'],
      input[type='week'],
      input[type='text'],
      select, textarea
        width 100%

      label
        display block

  input,select,textarea
    width 140px

  ul.two-col
    li
      width 48%
      padding 1%

  ul.three-col
    li
      width 31.2%
      padding 1%

  ul.four-col
    li
      width 23%
      padding 1%

  ul
    li.fw
      width 98%