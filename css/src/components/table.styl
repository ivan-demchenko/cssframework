@import "../defaults"
@import "../functions"

table
  border-bottom solid 2px lighten(color_gray, color_lighter)
  border-top solid 2px lighten(color_gray, color_lighter)

  col
    border-right solid 1px lighten(color_gray, color_lighter)
    col:last-child
      border none
    &:hover
      background lighten(color_gray, color_lighter)

  th, td
    padding 4px

  thead tr
    background lighten(color_gray, color_lighter)

  thead th
    text-align left

  tbody tr

    &:hover
        background lighten(color_yellow, color_very_light)

  &.zebra tbody tr
    &:nth-child(even)
      background lighten(color_gray, color_very_light)
      &:hover
        background lighten(color_yellow, color_very_light)