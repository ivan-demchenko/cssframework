@import "../defaults"

input[type='button'],
input[type='submit'],
input[type='reset'],
.button,
button
  background color_button_default
  border button_border
  color color_button_default_font_color
  display inline-block
  font-size fontsize
  line-height lineheight
  outline none
  padding form_elem_padding 7px
  overflow visible
  width auto
  &:hover
    text-decoration none
    color color_button_hovered_font_color
  &.big
    padding 12px 15px
    font-size fontsize + 4px
  &.small
    padding 0px 4px
    font-size fontsize - 3px

.button:visited
  color color_button_default_font_color
  border button_border

.button:visited:hover
  color color_button_hovered_font_color

input[type='submit']
  background color_button_submit
  color color_button_submit_font_color