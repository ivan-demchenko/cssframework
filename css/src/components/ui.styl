@import "defaults"

.toolbar 
  padding 1%
  float left
  width 98%

  .elem 
    position relative
    border-right solid 1px lighten(color_gray, color_lighter)
    padding 0 6px
    min-height 40px

    label 
      position relative
      display block
      font-size 13px
      line-height 14px

    input,select
      font-size 12px
      height 20px
      padding 0
      line-height 1
      width 90px
    
    select
      width 90px
    
    input[type='datetime'],
    input[type='datetime-local'],
    input[type='date']
      width 170px

    input[type='radio'],
    input[type='checkbox'] 
      height 22px
      width auto
      vertical-align middle

    input[type='submit'],
    input[type='reset'],
    input[type='button'],
    button, .button
      margin 0
      padding 1px 6px 2px
      line-height 17px
      font-size 13px

  &:last-child 
    border none

table
  border-bottom solid 2px lighten(color_gray, color_lighter)
  border-top solid 2px lighten(color_gray, color_lighter)

  th, td
    padding 4px

  thead tr
    background lighten(color_gray, color_lighter)

  thead th
    text-align left

  tbody tr
    multiprop(transition, animation_speed)

    &:nth-child(even)
      background lighten(color_gray, color_very_light)

    &:hover
      background lighten(color_yellow, color_very_light)
