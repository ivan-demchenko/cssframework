@import "defaults"

.toolbar 
  padding 1%
  float left
  width 98%

  .elem 
    position relative
    border-right solid 1px lighten(color_gray, color_lighter)
    padding 0 6px
    margin 3px 0
    min-height 47px

    label 
      position relative
      display block

    input,select
      font-size 12px
      height 20px
      padding 0
    
    select
      width 90px

    input[type='text'],
    input[type='search'],
    input[type='range'],
    input[type='email'],
    input[type='tel'],
    input[type='url']
        width 90px

    input[type='color'] 
      width 43px

    input[type='radio'],
    input[type='checkbox'] 
      height 22px
      width auto
      vertical-align middle

    input[type='submit'],
    input[type='reset'],
    input[type='button'],
    button, .button
      font-size 14px
      min-width 65px
      padding 0 9px
      margin 1px

  &:last-child 
    border none

table 
  border-bottom solid 2px lighten(color_gray, color_lighter)
  border-top solid 2px lighten(color_gray, color_lighter)

  th, td 
    padding 4px

  thead tr 
    background lighten(color_gray, color_lighter)

  thead th 
    text-align left

  tbody tr 
    multiprop(transition, animation_speed)

    &:nth-child(even) 
      background lighten(color_gray, color_very_light)

    &:hover 
      background lighten(color_yellow, color_very_light)
